<%- include('../includes/head') %>

<div class="wrapper">
  <%- include('../includes/sidebar') %>
  <div class="main-panel">
    <%- include('../includes/navbar') %>
    <div class="content">
      <div class="row">
        <div class="col-lg-12 col-md-12">
          <div class="card">
            <div class="card-header">
              <h4 class="card-title">Add Course</h4>
            </div>
            <div class="card-body">
              <div class="form">
                <form
                  action="/admin/<% if(editing){%>edit-course<% }else{ %>add-course<% } %>"
                  method="POST"
                  enctype="multipart/form-data"
                >
                  <div class="label" id="label">
                    <label for="image">Course Image</label>
                    <input type="file" name="image" <% if(!editing){ %>required<% } %> />
                  </div>
                  <div class="label" id="label">
                    <label for="course-name">Course Name</label>
                    <input
                      type="text"
                      name="course-name"
                      value="<% if(editing){ %><%= course.title %><% } %>"
                      required
                    />
                  </div>
                  <div class="label" id="label">
                    <label for="course-description">Course Description</label>
                    <textarea type="text" name="course-description" required>
<% if(editing){ %><%= course.description %><% } %></textarea
                    >
                  </div>
                  <% if(editing){ %>
                  <input
                    type="hidden"
                    value="<%= course._id %>"
                    name="courseId"
                  />
                  <% } %>
                  <button type="submit">
                    <% if(editing){ %>Update Course<% }else{ %>Add Course<% } %>
                  </button>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="row">
        <% if(courses.length > 0) { %> <% for(let course of courses) { %>
        <div class="col-lg-4">
          <div class="card card-chart">
            <div class="card-header d-flex justify-content-between">
              <h3 class="card-title"><%= course.title %></h3>
              <div class="d-flex">
                <span>
                  <a href="/admin/edit-course/<%= course._id %>?edit=true"
                    ><i class="tim-icons icon-pencil text-info"></i
                  ></a>
                </span>
                <span>
                  <form
                    class="delete-form"
                    action="/admin/delete-course"
                    method="POST"
                  >
                    <input
                      type="hidden"
                      value="<%= course._id %>"
                      name="courseId"
                    />
                    <button
                      class="
                        delete-button
                        tim-icons
                        icon-trash-simple
                        text-danger
                      "
                      type="submit"
                    ></button>
                  </form>
                </span>
              </div>
            </div>
            <div class="card-body mx-auto">
              <img src="/<%= course.imageUrl %> " alt="" />
            </div>
            <div class="card-footer">
              <p><%= course.description %></p>
            </div>
          </div>
        </div>
        <% } %> <% }else { %>
        <h1 class="mx-auto">Courses Not Found!</h1>
        <% } %>
      </div>
    </div>
  </div>
</div>
<%- include('../includes/fixed_plugin') %> <%- include('../includes/end') %>
