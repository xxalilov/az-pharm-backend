<%- include('../includes/head') %>

<div class="wrapper">
  <%- include('../includes/sidebar') %>
  <div class="main-panel">
    <%- include('../includes/navbar') %>
    <div class="content">
      <% if(about.length <= 0){ %>
      <button class="btn add-about" type="button">Add About</button>
      <% } else { %> <% } %>
      <div class="row">
        <% if(about && about.length > 0) { %>
        <div class="col-lg-12">
          <div class="card card-chart">
            <div class="card-header d-flex justify-content-between">
              <h3 class="card-title"><%= about[0].title %></h3>
              <div class="d-flex">
                <span>
                  <button
                    class="btn edit-about"
                    type="button"
                    value="<%= about[0]._id %>"
                  >
                    <i class="tim-icons icon-pencil text-info"></i>
                  </button>
                </span>
              </div>
            </div>
            <div class="card-body mx-auto">
              <p><%= about[0].description %></p>
              <br />
              <a href="<%= about[0].video %>">Video Link</a>
            </div>
          </div>
        </div>
        <% }else { %>
        <h1 class="mx-auto">About Not Found!</h1>
        <% } %>
      </div>
    </div>
  </div>
</div>
<%- include('../includes/fixed_plugin') %> <%- include('../includes/end') %>
